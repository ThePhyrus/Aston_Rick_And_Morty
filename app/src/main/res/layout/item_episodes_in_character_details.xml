<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/radius_card_corner">

    <ImageView
        android:id="@+id/ivItemEpisodesImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:scaleType="fitCenter"
        android:src="@drawable/image_for_item_episodes" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="@dimen/width_340_dp"
            android:layout_height="match_parent"

            android:ellipsize="end"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvEpisodeNameInItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/episode_name"
                android:textSize="@dimen/text_size_14_sp" />

            <TextView
                android:id="@+id/tvDataSapience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:text="@string/date"
                android:textSize="@dimen/text_size_14_sp" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/square_icon_48_dp"
            android:id="@+id/ivArrowForwardInEpisodesItem"
            android:layout_height="@dimen/square_icon_48_dp"
            android:layout_marginEnd="@dimen/margin_mini"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>